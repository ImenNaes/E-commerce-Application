@model IEnumerable<BLL.Entities.Product>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



  <a href="@Url.Action("Create", "Products")" class="btn btn-success"  >Create</a>



               
                
                <!-- END PAGE HEADER-->
                <!-- BEGIN PAGE CONTENT-->
                <div class="row">
                    <div class="col-md-12">
                       
                        <!-- Begin: life time stats -->
                        <div class="portlet">
                            <div class="portlet-title">
                                <div class="caption">
                                    <i class="fa fa-gift"></i>Products
                                </div>
                                <div class="actions">
                                    <div class="btn-group">
                                        <a class="btn default yellow-stripe dropdown-toggle" href="javascript:;" data-toggle="dropdown">
                                            <i class="fa fa-share"></i> Tools <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="dropdown-menu pull-right">
                                            <li>
                                                <a href="javascript:;">
                                                    Export to Excel
                                                </a>
                                            </li>                                          
                                            <li class="divider">
                                            </li>
                                            <li>
                                                <a href="javascript:;">
                                                    Print Invoices
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="portlet-body">
                                <div class="table-container">
                                    <div class="table-actions-wrapper">
                                        <span>
                                        </span>
                                        <select class="table-group-action-input form-control input-inline input-small input-sm">
                                            <option value="">Select...</option>
                                            <option value="publish">Publish</option>
                                            <option value="unpublished">Un-publish</option>
                                            <option value="delete">Delete</option>
                                        </select>
                                            <button class="btn btn-sm yellow filter-submit margin-bottom"><i class="fa fa-search"></i> Search</button>
                                    </div>



                                    <table class="table table-striped table-bordered table-hover" id="datatable_products">
                                        <thead>
                                            <tr role="row" class="heading">
                                                <th width="1%">
                                                    Product type
                                                </th>
                                                <th width="1%">
                                                    Création date
                                                </th>
                                                <th width="1%">
                                                    Update date
                                                </th>
                                                <th width="1%">
                                                    Product category

                                                </th>

                                                <th width="15%">
                                                    Product&nbsp;Name
                                                </th>
                                                <th width="15%">
                                                    Product&nbsp;Name Ar
                                                </th>

                                                <th width="10%">
                                                    Price
                                                </th>
                                                <th width="10%">
                                                    Discount
                                                </th>
                                                <th width="15%">
                                                    Expiry date
                                                </th>

                                                <th width="10%">
                                                    Size
                                                </th>
                                                <th width="10%">
                                                    Status
                                                </th>
                                                <th width="10%">
                                                    Actions
                                                </th>
                                            </tr>
                                          
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ProductType.NameEn)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CreationDate)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.UpdateDate)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ProductCategory.NameEn)
                                                    </td>


                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.NameEn)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.NameAr)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.FromPrice)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Discount)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ExpiryDate)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Sizes.Value)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.productstatus)
                                                    </td>
                                                    <td>
                                                        <center>
                                                            <a href="@Url.Action("Edit", "Products", new { id = item.ID })" class="fa fa-edit" style="color: green"></a>
                                                            <a href="@Url.Action("Details", "Products", new { id = item.ID })" class="fa fa-info-circle"></a>
                                                            <a href="@Url.Action("Delete", "Products", new { id = item.ID })" class="fa fa-remove" style="color: red"></a>
                                                        </center>
                                                    </td>
                                                </tr>



                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!-- End: life time stats -->
                    </div>
                </div>
           